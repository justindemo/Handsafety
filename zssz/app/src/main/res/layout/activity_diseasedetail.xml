<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_dealgrade"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_facility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sscc"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_department"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_facility_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sscc"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_dealcategory"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_facility_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sscc"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_roadname"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_facility_loca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sscc"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_problem"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_facility_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_uncheck_information"
                android:gravity="start|center_vertical"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reportertime"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_reportetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017年3月2日16:45:06"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="要求完成人："
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_requestname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="要求完成时间："
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_requesttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017年3月2日16:45:06"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_locaiton"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />


            <FrameLayout
                android:id="@+id/tv_detail_problem_loca1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_detail_problem_audio"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:background="@drawable/selector_tv_audio"
                    android:drawableRight="@mipmap/play"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_detail_problem_loca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="位置描述"
                    android:textSize="18sp" />


            </FrameLayout>
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整改措施人："
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_planer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="miaoshu"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整改措施："
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="miaoshu"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审批意见："
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_sendadvice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="miaoshu"
                android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_detail_reporteiamg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/reportimg"
            android:textColor="@color/cc_text_blank"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/ll_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_uncheck_information"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_detail_photo1"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_detail_photo2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_detail_photo3"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:scaleType="fitXY" />

        </LinearLayout>





        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_road_idea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/tv_deal_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_sendroad_tv"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/review_tv_pass"
                android:textColor="@color/cc_white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_deal_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape_sendroad_back"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/review_tv_fail"
                android:textColor="@color/cc_white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
