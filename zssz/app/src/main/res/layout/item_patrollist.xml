<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="设备编号："
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_facility_code"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="设备名称："
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_facility_name"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="设备位置："
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_facility_location"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="设备负责队："
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_facility_team"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="检查人一："
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_facility_person1"
                android:textSize="16sp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_uncheck_information"
                android:layout_height="wrap_content" />
            <TextView
                android:text="检查人二："
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_facility_person2"
                android:textSize="16sp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape_uncheck_information"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>



    <View
        android:layout_marginTop="6dp"
        android:background="@color/cc_dark_fade"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_facility_state"
        android:textSize="16sp"
        android:text="未排查"
        android:padding="4dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_uncheck_press"
        android:layout_gravity="right"
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>