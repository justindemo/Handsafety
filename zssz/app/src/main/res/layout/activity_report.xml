<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ll_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_dealgrade"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/report_facility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_uncheck_information"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_department"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/report_facility_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_uncheck_information"
                    android:gravity="start|center_vertical"

                    android:textColor="@color/cc_text_blank"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_facategory"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_uncheck_information"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/report_facility_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/cc_text_blank"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@mipmap/arrow_down" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_faname"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_uncheck_information"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/report_facility_problem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:hint="@string/report_tip"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/cc_text_blank"
                        android:textColorHint="@color/cc_supervise"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/report_iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@mipmap/arrow_down" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_roadname"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/report_facility_loca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_uncheck_information"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="18sp" />

            </LinearLayout>


            <Button
                android:id="@+id/check_standard"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:background="@drawable/shape_custom_btn_bg"
                android:text="@string/report_check_standard"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="6dp"
                android:background="@color/graybackground" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/report_image"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="@dimen/report_img"
                    android:layout_height="@dimen/report_img">

                    <ImageView
                        android:id="@+id/iv_report_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/iv_add"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_photo1_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/iv_delete_video" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/report_img"
                    android:layout_height="@dimen/report_img">

                    <ImageView
                        android:id="@+id/iv_report_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/iv_add"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_photo2_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/iv_delete_video" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/report_img"
                    android:layout_height="@dimen/report_img">

                    <ImageView
                        android:id="@+id/iv_report_icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/iv_add"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_photo3_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/iv_delete_video" />
                </RelativeLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_input_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/iv_audio" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp">

                    <LinearLayout
                        android:id="@+id/ll_audio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_press_audio"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/selector_tv_audio"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="@string/report_tv_press_audio"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_audio"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_tv_audio"
                            android:drawableLeft="@mipmap/iv_audio_play"
                            android:gravity="center"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_re_record"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_tv_audio"
                            android:gravity="center"
                            android:text="@string/report_tv_record"
                            android:textSize="18sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/locationDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/report_locaiton"
                        android:maxLines="4"
                        android:textSize="18sp" />
                </FrameLayout>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:background="@mipmap/report_update"
            android:text="@string/report_commit"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </RelativeLayout>


    <!-- 请求数据-->

    <RelativeLayout
        android:id="@+id/report_rl_notonline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_refresh"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/home_notnetwork"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_btn_refresh"
            android:text="@string/home_refresh"
            android:textColor="@color/miantitle"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_modification_pb"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress_loading" />
    </LinearLayout>


</FrameLayout>