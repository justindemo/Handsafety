<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/cate_company_left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:padding="6dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:text="北京向阳天科技有限公司"
            android:ellipsize="end"
            android:id="@+id/tv_facilitycop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_facilitycop_msg"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="@color/cc_light_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.xytsz.xytaj.ui.RoundImageView
        android:src="@mipmap/companydetail"
        android:id="@+id/iv_facilitycop"
        app:type="round"
        android:layout_width="86dp"
        android:layout_height="55dp" />
    </LinearLayout>
    <View
        android:layout_marginTop="6dp"
        android:background="@color/cc_line"
        android:layout_below="@+id/cate_company_left"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>